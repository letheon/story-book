<h6>Dashboard</h6>
<h3>Welcome, {{name}}</h3>
{{#if stories}}
<p>Here are your Stories...</p>
<table class="striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
      <tr>
        <td><a href="/stories/{{_id}}">{{title}}</a></td>
        <td>{{createdAt}}</td>
        <td><span class="dash-status">{{status}}</span></td>
        <td></td>
      </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<div class="card">
  <div class="card-text"><p>You have not created any Stories!</p></div>
  </div>

{{/if}}
